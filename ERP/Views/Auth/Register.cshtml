@model ERP.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center min-h-screen ">
    <div class="bg-white shadow-xl rounded-2xl w-full p-8 mt-4">
        <div class="text-center mb-6">
            <i class="fa-solid fa-user-plus text-indigo-600 text-5xl mb-4"></i>
            <h2 class="text-3xl font-bold text-indigo-600">Create Account</h2>
            <p class="text-gray-500 text-md mt-2">Fill the details below to register</p>
        </div>

        @using (Html.BeginForm("CreateRegistration", "Auth", FormMethod.Post, new { enctype = "multipart/form-data", @class = "space-y-6" }))
        {
            <div style="display:none;">
                @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                    {
                        @class = "w-full mt-1 p-2 border border-gray-300 rounded",
                        @id = "current_date",
                        required = "required",
                        type = "date"
                    })
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block font-semibold text-md text-gray-700">Full Name</label>
                    @Html.TextBoxFor(m => m.name, new { @class = "mt-1 block w-80 rounded-xl border px-4 py-3", placeholder = "Enter Full Name", required = "required" })
                </div>

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Phone Number</label>
                    @Html.TextBoxFor(m => m.phone_number,
                             new { @class = "w-80 p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Phone Number" })
                </div>
             </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block font-semibold text-md text-gray-700">Email Address</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "mt-1 block w-80 rounded-xl border px-4 py-3", placeholder = "Enter Email Address", type = "email", required = "required" })
                </div>
                <div>
                    <label class="block font-semibold text-md text-gray-700">Password</label>
                    @Html.PasswordFor(m => m.password, new { @class = "mt-1 block w-80 rounded-xl border px-4 py-3", placeholder = "Enter Password", required = "required" })
                </div>
            </div>


            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Address</label>
                    @Html.TextAreaFor(m => m.address, new { @class = "w-80 p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", placeholder = "Enter Company Address" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Image</label>
                    <input type="file" name="logoFile" accept="image/*"
                           class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" />

                    @if (Model != null && !string.IsNullOrEmpty(Model.image))
                    {
                        <img src="data:image/png;base64,@Model.image" class="mt-2 w-32 h-auto rounded border" />
                    }
                </div>
            </div>


        
           
            


            <div>
                <button type="submit" class="w-full bg-indigo-600 text-white font-semibold py-3 rounded-xl shadow-md hover:bg-indigo-700 transition duration-200">
                    Register
                </button>
            </div>

            <div class="text-center text-sm text-gray-600 mt-4">
                Already have an account?
                <a asp-controller="Auth" asp-action="Login" class="text-indigo-600 hover:text-indigo-800 font-medium">
                    Login here
                </a>
            </div>
        }
    </div>
</div>
