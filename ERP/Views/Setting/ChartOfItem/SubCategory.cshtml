@model ERP.Models.SubCategory
@{
    ViewData["Title"] = "SubCategory";
    var subCategoryList = ViewBag.SubCategory as List<ERP.Models.SubCategory>;
}

<div class="space-y-8">

    <!-- Role Form -->
    @using (Html.BeginForm("Create", "SubCategory", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id, new { id = "subCategoryId" })

        <div class="shadow-xl rounded-2xl bg-white p-6 border border-gray-200">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
                    <i class="fa-solid fas fa-stream text-blue-600"></i> Sub Category Management
                </h2>
                <div class="space-x-2">
                    <button type="submit"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-green-600 hover:bg-green-700 shadow-md transition">
                        <i class="fa-solid fa-save mr-1"></i> Save
                    </button>
                    <button type="reset"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-gray-700 bg-yellow-300 hover:bg-yellow-400 shadow-md transition">
                        <i class="fa-solid fa-rotate-right mr-1"></i> Reset
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Current Date</label>
                    @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                        {
                            @class = "w-full mt-1 p-2 border border-gray-300 rounded",
                            @id = "current_date",
                            required = "required",
                            type = "date"
                        })
                </div>

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Category Name</label>
                    @Html.TextBoxFor(m => m.sub_category_name,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Sub Category name" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Status</label>
                    <div class="flex items-center space-x-2 mt-1">
                        @Html.CheckBoxFor(m => m.status, new { @class = "w-5 h-5 text-blue-600 rounded focus:ring-blue-500" })
                        <span class="text-gray-600">Active</span>
                    </div>
                </div>
                </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Category Name</label>
                    @Html.DropDownListFor(m => m.categoryId, new SelectList(ViewBag.categoryList, "Id", "category_name"),
                             "Select Category",
                             new
                             {
                                 @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none",
                                 @id = "categoryId",
                                 required = "required"
                             }
                             )
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Sub Category Description</label>
                    @Html.TextAreaFor(m => m.sub_category_description,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Description name" })
                </div>
            </div>
        </div>
    }

    <!-- Roles Table -->
    <div class="shadow-xl rounded-2xl bg-white p-6 border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fa-solid fa-list text-blue-600"></i> Category List
        </h3>

        <div class="overflow-x-auto">
            <table class="table-auto w-full text-sm border border-gray-200 rounded-lg overflow-hidden">
                <thead class="bg-gradient-to-r from-blue-500 to-blue-600 text-white">
                    <tr>
                        <th class="p-3 text-left">ID</th>
                        <th class="p-3 text-left">Date</th>
                        <th class="p-3 text-left">Category Name</th>
                        <th class="p-3 text-left">Sub Category Name</th>
                        <th class="p-3 text-left">Status</th>
                        <th class="p-3 text-left">Sub Category Description</th>
                        <th class="p-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (subCategoryList != null && subCategoryList.Any())
                    {
                        foreach (var item in subCategoryList)
                        {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="p-3">@item.Id</td>
                                <td class="p-3">@item.current_date</td>
                                <td class="p-3 font-medium">@item.Category.category_name</td>
                                <td class="p-3 font-medium">@item.sub_category_name</td>

                                <td class="p-3">
                                    @if (item.status)
                                    {
                                        <span class="px-3 py-1 text-xs font-medium text-green-700 bg-green-100 rounded-full">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 text-xs font-medium text-red-700 bg-red-100 rounded-full">Inactive</span>
                                    }
                                </td>
                                <td class="p-3">@item.sub_category_description</td>
                                <td class="p-3 text-center space-x-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="px-3 py-1.5 rounded-lg text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition">
                                        <i class="fa-solid fa-pen"></i> Edit
                                    </a>
                                    @using (Html.BeginForm("Delete", "SubCategory", FormMethod.Post, new { onsubmit = "return confirm('Are you sure?');", @class = "inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", item.Id)
                                        <button type="submit"
                                                class="px-3 py-1.5 rounded-lg text-xs font-medium bg-red-100 text-red-700 hover:bg-red-200 transition">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center p-4 text-gray-500">No Category found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>