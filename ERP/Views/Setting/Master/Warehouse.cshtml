@model ERP.Models.Master.Warehouse
@{
    ViewData["Title"] = "Warehouse";
    var warehouseList = ViewBag.Warehouse as List<ERP.Models.Master.Warehouse>;
    int totalItems = ViewBag.TotalItems;
    int page = ViewBag.Page;
    int pageSize = ViewBag.PageSize;
    string searchString = ViewBag.SearchString ?? "";
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
}

<div class="space-y-8">

    <!-- Role Form -->
    @using (Html.BeginForm("Create", "Warehouse", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id, new { id = "warehouseId" })
        <div class="shadow-lg rounded-2xl bg-gradient-to-r from-blue-50 to-blue-100 p-6 border border-gray-200">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-2xl font-bold text-blue-800 flex items-center gap-2">
                        <i class="fa-solid fas fa-truck text-blue-600"></i> Warehouse Management
                    </h2>
                    <p class="text-gray-600 mt-1 text-sm">Add and manage your inventory Warehouse efficiently</p>
                </div>

                <div class="space-x-2">
                    <button type="submit"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-green-600 hover:bg-green-700 shadow-md transition">
                        <i class="fa-solid fa-save mr-2"></i> Save
                    </button>
                    <button type="reset"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-gray-700 bg-yellow-300 hover:bg-yellow-400 shadow-md transition">
                        <i class="fa-solid fa-rotate-right mr-2"></i> Reset
                    </button>
                    <button type="button" onclick="refreshPage()"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-purple-500 hover:bg-purple-600 shadow-md transition">
                        <i class="fa-solid fa-arrows-rotate mr-2"></i> Refresh
                    </button>
                </div>
            </div>
        </div>


        <div class="shadow-xl rounded-2xl bg-white p-6 border border-gray-200 mt-7">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Current Date</label>
                    @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                        {
                            @class = "w-full mt-1 p-2 border border-gray-300 rounded",
                            @id = "current_date",
                            required = "required",
                            type = "date"
                        })
                </div>

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Warehouse Name</label>
                    @Html.TextBoxFor(m => m.warehouse_name,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Warehouse name" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Warehouse Type</label>
                    @Html.DropDownListFor(m => m.type,
                             new List<SelectListItem>
                {

                new SelectListItem { Text = "All", Value = "All" },
                new SelectListItem { Text = "General", Value = "General" },
                new SelectListItem { Text = "Raw", Value = "Raw" },
                new SelectListItem { Text = "Finished Goods", Value = "FinishedGoods" }
                },
                             "Select Warehouse Type",
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required" })
                </div>


                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Status</label>
                    <div class="flex items-center space-x-2 mt-1">
                        @Html.CheckBoxFor(m => m.status, new { @class = "w-5 h-5 text-blue-600 rounded focus:ring-blue-500" })
                        <span class="text-gray-600">Active</span>
                    </div>
                </div>

            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-2">
                <div>
                <label class="block font-semibold text-gray-700 mb-1">Company Name</label>
                @Html.DropDownListFor(m => m.companyId, new SelectList(ViewBag.companyList, "Id", "company_name"),
                         "Select Company",
                         new
                         {
                             @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none",
                             @id = "companyId",
                             required = "required"
                         }
                         )
            </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Country</label>
                    @Html.TextBoxFor(m => m.country,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Warehouse Country" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">City</label>
                    @Html.TextBoxFor(m => m.city,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Warehouse City" })
                </div>
               
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-2">

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Warehouse Address</label>
                    @Html.TextAreaFor(m => m.address,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", required = "required", type = "text", placeholder = "Enter Warehouse Address" })
                </div>

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Warehouse Description</label>
                    @Html.TextAreaFor(m => m.warehouse_description,
                             new { @class = "w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", type = "text", placeholder = "Enter Warehouse Description " })
                </div>


            </div>
        </div>
    }

    <!-- Roles Table -->
    <div class="shadow-xl rounded-2xl bg-white p-6 border border-gray-200">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-gray-800 flex items-center gap-2">
                <i class="fa-solid fa-list text-blue-600"></i> Warehouse List
            </h3>
            <form method="get" asp-action="Warehouse" class="flex items-center space-x-2">
                <div class="relative w-full">
                    <input type="text" id="searchInput" name="searchString" value="@searchString"
                           placeholder="Search Transporter..."
                           class="w-full px-3 py-2 pr-10 border rounded-lg focus:ring focus:ring-blue-300" />

                    <button type="button" id="clearSearch"
                            class="absolute inset-y-0 right-2 flex items-center text-gray-400 hover:text-red-500 hidden">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
                <button type="submit"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    <i class="fa fa-search"></i>
                </button>
            </form>
        </div>

        <div class="overflow-x-auto">
            <table class="table-auto w-full text-sm border border-gray-200 rounded-lg overflow-hidden">
                <thead class="bg-gradient-to-r from-blue-500 to-blue-600 text-white">
                    <tr>
                        <th class="p-3 text-left">ID</th>
                        <th class="p-3 text-left">Date</th>
                        <th class="p-3 text-left">Warehouse Name</th>
                        <th class="p-3 text-left">Warehouse Type</th>
                        <th class="p-3 text-left">Company Name</th>
                        <th class="p-3 text-left">Status</th>
                        <th class="p-3 text-left">Address</th>
                        <th class="p-3 text-left">Description</th>
                        <th class="p-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (warehouseList != null && warehouseList.Any())
                    {
                        foreach (var item in warehouseList)
                            {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="p-3">@item.Id</td>
                                <td class="p-3">@item.current_date</td>
                                <td class="p-3 font-medium">@item.warehouse_name</td>
                                <td class="p-3">@item.type</td>
                                <td class="p-3">@item.Company.company_name</td>
                                <td class="p-3">
                                    @if (item.status)
                                    {
                                        <span class="px-3 py-1 text-xs font-medium text-green-700 bg-green-100 rounded-full">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 text-xs font-medium text-red-700 bg-red-100 rounded-full">Inactive</span>
                                    }
                                </td>
                                <td class="p-3">@item.address</td>
                                <td class="p-3">@item.warehouse_description</td>
                                <td class="p-3 text-center space-x-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="px-3 py-1.5 rounded-lg text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition">
                                        <i class="fa-solid fa-pen"></i> Edit
                                    </a>
                                    @using (Html.BeginForm("Delete", "Warehouse", FormMethod.Post, new { onsubmit = "return confirm('Are you sure?');", @class = "inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", item.Id)
                                        <button type="submit"
                                                class="px-3 py-1.5 rounded-lg text-xs font-medium bg-red-100 text-red-700 hover:bg-red-200 transition">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center p-4 text-gray-500">No Warehouse found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="flex justify-between items-center mt-4">
            <span class="text-sm text-gray-600">Page @(page) of  @totalPages</span>
            <div class="space-x-2">
                @if (page > 1)
                {
                    <a asp-action="Warehouse" asp-route-page="@(page-1)" asp-route-searchString="@searchString"
                       class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">Prev</a>



                }
                @if (page < totalPages)
                {
                    <a asp-action="Warehouse" asp-route-page="@(page+1)" asp-route-searchString="@searchString"
                       class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">Next</a>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function refreshPage() {
        window.location.href = '@Url.Action("Warehouse", "Warehouse")';
    }

    const searchInput = document.getElementById("searchInput");
    const clearBtn = document.getElementById("clearSearch");
    searchInput.addEventListener("input", () => {
        clearBtn.style.display = searchInput.value ? "flex" : "none";
    });
    clearBtn.addEventListener("click", () => {
        refreshPage();
    });
    if (searchInput.value) {
        clearBtn.style.display = "flex";
    }
</script>