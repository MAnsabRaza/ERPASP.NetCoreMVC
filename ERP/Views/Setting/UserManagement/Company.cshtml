@model ERP.Models.Company
@{
    ViewData["Title"] = "Companies";
    var companyList = ViewBag.Company as List<ERP.Models.Company>;

    int totalItems = ViewBag.TotalItems;
    int page = ViewBag.Page;
    int pageSize = ViewBag.PageSize;
    string searchString = ViewBag.SearchString ?? "";
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
}

<div class="space-y-8">
    <!-- Company Form -->
    @using (Html.BeginForm("Create", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="shadow-lg rounded-2xl bg-gradient-to-r from-blue-50 to-blue-100 p-6 border border-gray-200">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-2xl font-bold text-blue-800 flex items-center gap-2">
                        <i class="fa-solid fa-building text-blue-900"></i> Company
                    </h2>
                    <p class="text-gray-600 mt-1 text-sm">Add and manage your Company efficiently</p>
                </div>

                <div class="space-x-2">
                    <button type="submit"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-green-600 hover:bg-green-700 shadow-md transition">
                        <i class="fa-solid fa-save mr-2"></i> Save
                    </button>
                    <button type="reset"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-gray-700 bg-yellow-300 hover:bg-yellow-400 shadow-md transition">
                        <i class="fa-solid fa-rotate-right mr-2"></i> Reset
                    </button>
                    <button type="button" onclick="refreshPage()"
                            class="px-5 py-2.5 rounded-xl text-sm font-semibold text-white bg-purple-500 hover:bg-purple-600 shadow-md transition">
                        <i class="fa-solid fa-arrows-rotate mr-2"></i> Refresh
                    </button>
                </div>
            </div>
        </div>



        <div class="shadow-xl rounded-2xl bg-white p-6 border border-gray-200 mt-5">
          

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Current Date</label>
                    @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new { @class = "w-full mt-1 p-2 border border-gray-300 rounded", type = "date" })
                </div>

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Company Name</label>
                    @Html.TextBoxFor(m => m.company_name, new { @class = "w-full p-2.5 border border-gray-300 rounded", required = "required", placeholder = "Enter Company Name" })
                </div>

                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Status</label>
                    <div class="flex items-center space-x-2 mt-1">
                        @Html.CheckBoxFor(m => m.status, new { @class = "w-5 h-5 text-blue-900" })
                        <span class="text-gray-600">Active</span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-4">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Phone</label>
                    @Html.TextBoxFor(m => m.phone, new { @class = "w-full p-2.5 border", type = "tel", required = "required" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Website Link</label>
                    @Html.TextBoxFor(m => m.website_path, new { @class = "w-full p-2.5 border", type = "text", required = "required" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Company Email</label>
                    @Html.TextBoxFor(m => m.company_email, new { @class = "w-full p-2.5 border", type = "email", required = "required" })
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-4">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Country</label>
                    @Html.TextBoxFor(m => m.country, new { @class = "w-full p-2.5 border", type = "text", required = "required" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">City</label>
                    @Html.TextBoxFor(m => m.city, new { @class = "w-full p-2.5 border", type = "text", required = "required" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Zip Code</label>
                    @Html.TextBoxFor(m => m.zipcode, new { @class = "w-full p-2.5 border", type = "text", required = "required" })
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Address</label>
                    @Html.TextAreaFor(m => m.address, new { @class = "w-full p-2.5 border", required = "required", placeholder = "Enter Company Address" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Logo</label>
                    <input type="file" name="logoFile" accept="image/*" class="w-full p-2.5 border" />
                    @if (!string.IsNullOrEmpty(Model.logo))
                    {
                        <img src="data:image/png;base64,@Model.logo" class="mt-2 w-32 h-auto rounded border" />
                    }
                </div>
            </div>
        </div>
    }

    <!-- Companies Table -->
    <div class="shadow-xl rounded-2xl bg-white p-6 border border-gray-200 mt-5">

        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-blue-800 flex items-center gap-2">
                <i class="fa-solid fa-list text-blue-900"></i> Company List
            </h3>
            <form method="get" asp-action="Company" class="flex items-center space-x-2 relative w-full max-w-xs">
                <div class="relative w-full">
                    <input type="text" id="searchInput" name="searchString" value="@searchString"
                           placeholder="Search Role..."
                           class="w-full px-3 py-2 pr-10 border rounded-lg focus:ring focus:ring-blue-300" />

                    <button type="button" id="clearSearch"
                            class="absolute inset-y-0 right-2 flex items-center text-gray-400 hover:text-red-500 hidden">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>

                <button type="submit"
                        class="px-4 py-2 bg-blue-900 text-white rounded-lg hover:bg-blue-800">
                    <i class="fa fa-search"></i>
                </button>
            </form>

        </div>

        <div class="overflow-x-auto">
            <table class="table-auto w-full text-sm border border-gray-200 rounded-lg overflow-hidden">
                <thead class="bg-gradient-to-r from-blue-800 to-blue-900 text-white">
                    <tr>
                        <th class="p-3 text-left">ID</th>
                        <th class="p-3 text-left">Date</th>
                        <th class="p-3 text-left">Company Name</th>
                        <th class="p-3 text-left">Website Link</th>
                        <th class="p-3 text-left">Email</th>
                        <th class="p-3 text-left">Phone</th>
                        <th class="p-3 text-left">Status</th>
                        <th class="p-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (companyList != null && companyList.Any())
                    {
                        foreach (var item in companyList)
                        {
                            <tr class="hover:bg-gray-50 transition">
                                <td class="p-3">@item.Id</td>
                                <td class="p-3">@item.current_date</td>
                                <td class="p-3 font-medium">@item.company_name</td>
                                <td class="p-3">@item.website_path</td>
                                <td class="p-3">@item.company_email</td>
                                <td class="p-3">@item.phone</td>
                                <td class="p-3">
                                    @if (item.status)
                                    {
                                        <span class="px-3 py-1 text-xs font-medium text-green-700 bg-green-100 rounded-full">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 text-xs font-medium text-red-700 bg-red-100 rounded-full">Inactive</span>
                                    }
                                </td>
                                <td class="p-3 text-center space-x-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="px-3 py-1.5 rounded-lg text-xs font-medium bg-blue-100 text-blue-700 hover:bg-blue-200 transition">
                                        <i class="fa-solid fa-pen"></i> Edit
                                    </a>
                                    @using (Html.BeginForm("Delete", "Company", FormMethod.Post, new { onsubmit = "return confirm('Are you sure?');", @class = "inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", item.Id)
                                        <button type="submit"
                                                class="px-3 py-1.5 rounded-lg text-xs font-medium bg-red-100 text-red-700 hover:bg-red-200 transition">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center p-4 text-gray-500">No companies found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="flex justify-between items-center mt-4">
            <span class="text-sm text-gray-600">Page @(page) of  @totalPages</span>
            <div class="space-x-2">
                @if (page > 1)
                {
                    <a asp-action="Company" asp-route-page="@(page-1)" asp-route-searchString="@searchString"
                       class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">Prev</a>
                }
                @if (page < totalPages)
                {
                    <a asp-action="Company" asp-route-page="@(page+1)" asp-route-searchString="@searchString"
                       class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">Next</a>
                }
            </div>
        </div>
    </div>
</div>
<script>
    function refreshPage() {
        window.location.href = '@Url.Action("Company", "Company")';
    }

    const searchInput = document.getElementById("searchInput");
    const clearBtn = document.getElementById("clearSearch");
    searchInput.addEventListener("input", () => {
        clearBtn.style.display = searchInput.value ? "flex" : "none";
    });
    clearBtn.addEventListener("click", () => {
        refreshPage();
    });
    if (searchInput.value) {
        clearBtn.style.display = "flex";
    }
</script>
