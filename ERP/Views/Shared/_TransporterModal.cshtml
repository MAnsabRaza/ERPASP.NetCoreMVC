@* Views/Purchase/_TransporterModal.cshtml *@
@model ERP.Models.Transporter

<div id="transporterModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-5xl max-h-screen overflow-y-auto">
        @using (Html.BeginForm("Create", "Transporter", FormMethod.Post, new { id = "transporterForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-50 to-blue-100 p-5 rounded-t-2xl flex justify-between items-center">
                <h3 class="text-2xl font-bold text-blue-900 flex items-center gap-2">
                    <i class="fa-solid fa-truck"></i> Add New Transporter
                </h3>
                <button type="button" onclick="closeTransporterModal()" class="text-gray-600 hover:text-gray-900">
                    <i class="fa-solid fa-xmark text-xl"></i>
                </button>
            </div>

            <!-- Body -->
            <div class="p-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-5">
                    <div>
                        <label class="block font-semibold text-gray-700 mb-1">Current Date</label>
                        @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                        {
                            @class = "w-full mt-1 p-2 border border-gray-300 rounded",
                                        @id = "current_date",
                                        required = "required",
                                        type = "date"
                                        })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Transporter Name *</label>
                    @Html.TextBoxFor(m => m.name,
                                        new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", required = "required", placeholder = "Enter name" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Transporter Number *</label>
                    @Html.TextBoxFor(m => m.transporter_no,
                                        new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", required = "required", placeholder = "Enter number" })
                </div>
                <div class="flex items-center space-x-2 mt-6">
                    @Html.CheckBoxFor(m => m.status, new { @class = "w-5 h-5 text-blue-900 rounded" })
                    <span class="text-gray-600">Active</span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Phone *</label>
                    @Html.TextBoxFor(m => m.phone,
                                        new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", required = "required", placeholder = "Enter phone" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Address *</label>
                    @Html.TextAreaFor(m => m.address,
                                        new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", rows = "2", required = "required", placeholder = "Enter address" })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Description</label>
                    @Html.TextAreaFor(m => m.description,
                                        new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", rows = "2", placeholder = "Enter description" })
                </div>
            </div>
        </div>

        <!-- Footer: Only Save + Close -->
        <div class="bg-gray-50 p-5 rounded-b-2xl flex justify-end space-x-3">
            <button type="button" onclick="closeTransporterModal()"
                    class="px-6 py-2.5 rounded-xl text-sm font-semibold text-gray-700 bg-gray-300 hover:bg-gray-400 transition">
                Close
            </button>
            <button type="submit"
                    class="px-6 py-2.5 rounded-xl text-sm font-semibold text-white bg-green-600 hover:bg-green-700 shadow-md transition">
                Save
            </button>
        </div>
                }
    </div>
</div>