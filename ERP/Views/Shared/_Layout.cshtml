<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar-transition {
            transition: transform 0.3s ease-in-out;
        }

        .sidebar-closed {
            transform: translateX(-100%);
        }

        .hover-bg:hover {
            background-color: rgba(59, 130, 246, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 fixed w-full top-0 z-30">
        <div class="flex items-center justify-between px-4 py-3">
            <div class="flex items-center">
                <button id="sidebarToggle" class="md:hidden text-gray-600 hover:text-gray-900 focus:outline-none mr-3">
                    <i class="fas fa-bars text-xl"></i>
                </button>
                <div class="flex items-center">
                    <div class="bg-blue-600 text-white p-2 rounded-lg mr-3">
                        <i class="fas fa-chart-line text-xl"></i>
                    </div>
                    <h1 class="text-xl font-bold text-gray-800">Enterprise ERP</h1>
                </div>
            </div>

            <div class="flex items-center space-x-4">
                <!-- Search -->
                <div class="hidden md:flex items-center bg-gray-100 rounded-lg px-3 py-2">
                    <i class="fas fa-search text-gray-400 mr-2"></i>
                    <input type="text" placeholder="Search..." class="bg-transparent outline-none text-sm w-64">
                </div>

                <!-- Notifications -->
                <button class="relative text-gray-600 hover:text-gray-900">
                    <i class="fas fa-bell text-xl"></i>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                </button>

                <!-- Profile -->
                <div class="flex items-center space-x-2 cursor-pointer hover:bg-gray-100 rounded-lg p-2">
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-white text-sm"></i>
                    </div>
                    <span class="hidden md:block text-gray-700 font-medium">John Doe</span>
                    <i class="fas fa-chevron-down text-gray-400 text-sm"></i>
                </div>
            </div>
        </div>
    </header>

    <div class="flex pt-16">
        <!-- Sidebar -->
        <aside id="sidebar" class="sidebar-transition fixed md:static inset-y-0 left-0 z-20 w-64 bg-white shadow-lg border-r border-gray-200 mt-16 md:mt-0">
            <div class="h-full overflow-y-auto">
                <!-- User Info -->
                <div class="p-4 border-b border-gray-200">
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800">John Doe</h3>
                            <p class="text-sm text-gray-500">Administrator</p>
                        </div>
                    </div>
                </div>

                <!-- Navigation -->
                <nav class="mt-4">
                    <div class="px-4 py-2">
                        <h4 class="text-xs uppercase tracking-wider text-gray-400 font-semibold">Main Menu</h4>
                    </div>

                    <ul class="space-y-1 px-2">
                        <li><a href="#" class="flex items-center px-3 py-2 text-gray-700 hover-bg rounded-lg"><i class="fas fa-home mr-3 text-gray-400"></i> Dashboard</a></li>
                        <li><a href="#" class="flex items-center px-3 py-2 text-gray-700 hover-bg rounded-lg"><i class="fas fa-box mr-3 text-gray-400"></i> Inventory</a></li>
                        <li><a href="#" class="flex items-center px-3 py-2 text-gray-700 hover-bg rounded-lg"><i class="fas fa-receipt mr-3 text-gray-400"></i> Orders</a></li>
                    </ul>

                    <div class="px-4 py-2 mt-6">
                        <h4 class="text-xs uppercase tracking-wider text-gray-400 font-semibold">Support</h4>
                    </div>

                    <ul class="space-y-1 px-2">
                        <!-- Settings Dropdown -->
                        <li class="relative">
                            <button id="settingsToggle" class="flex items-center justify-between w-full px-3 py-2 text-gray-700 rounded-lg hover:bg-gray-100 focus:outline-none">
                                <span class="flex items-center"><i class="fas fa-cog mr-3 text-gray-400"></i> Settings</span>
                                <i id="settingsChevron" class="fas fa-chevron-down text-gray-400 transition-transform duration-200"></i>
                            </button>
                            <!-- First Level Dropdown -->
                            <ul id="settingsDropdown" class="hidden mt-1 ml-6 space-y-1 bg-white border border-gray-200 rounded-lg shadow-lg p-2">
                                <li>
                                    <button id="itemToggle" class="flex items-center justify-between w-full px-3 py-2 text-gray-600 rounded-md hover:bg-gray-100">
                                        <span class="flex items-center"><i class="fas fa-box-open mr-2"></i> Chat Of Item</span>
                                        <i id="itemChevron" class="fas fa-chevron-down text-gray-400 transition-transform duration-200"></i>
                                    </button>
                                    <ul id="itemDropdown" class="hidden mt-1 ml-6 space-y-1 bg-white border border-gray-200 rounded-lg shadow-lg p-2">
                                        <li>
                                            <a asp-controller="Item" asp-action="Item" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-box-open mr-2 text-gray-400"></i><span>Item</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Category" asp-action="Category" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-layer-group mr-2 text-gray-400"></i><span>Category</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="SubCategory" asp-action="SubCategory" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-stream mr-2 text-gray-400"></i><span>Sub Category</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Brand" asp-action="Brand" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-tag mr-2 text-gray-400"></i><span>Brand</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="UOM" asp-action="UOM" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-ruler-combined mr-2 text-gray-400"></i><span>UOM</span>
                                            </a>
                                        </li>
                                        </ul>
                                  </li>
                                <!-- Admin Nested Dropdown -->
                                <li class="relative">
                                    <button id="adminToggle" class="flex items-center justify-between w-full px-3 py-2 text-gray-600 rounded-md hover:bg-gray-100">
                                        <span class="flex items-center"><i class="fas fa-user-shield mr-2"></i> Admin</span>
                                        <i id="adminChevron" class="fas fa-chevron-down text-gray-400 transition-transform duration-200"></i>
                                    </button>
                                    <!-- Second Level Dropdown -->
                                    <ul id="adminDropdown" class="hidden mt-1 ml-6 space-y-1 bg-white border border-gray-200 rounded-lg shadow-lg p-2">
                                        <li>
                                            <a asp-controller="User" asp-action="User" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-users mr-2 text-gray-400"></i><span>User</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Role" asp-action="Role" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-user-shield mr-2 text-gray-400"></i><span>Role</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Permission" asp-action="Permission" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-key mr-2 text-gray-400"></i><span>Permission</span>
                                            </a>
                                        </li>
                                          <li>
                                            <a asp-controller="Module" asp-action="Module" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-cubes mr-2 text-gray-400"></i><span>Module</span>
                                            </a>
                                        </li>
                                      <li><a asp-controller="Component" asp-action="Component" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                            <i class="fas fa-puzzle-piece mr-2 text-gray-400"></i><span>Component</span></a></li>
                                        <li>
                                            <a asp-controller="Company" asp-action="Company" class="flex items-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                                                <i class="fas fa-building mr-2 text-gray-400"></i><span>Company</span>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>

                        <li><a href="#" class="flex items-center px-3 py-2 text-gray-700 hover-bg rounded-lg"><i class="fas fa-question-circle mr-3 text-gray-400"></i> Help Center</a></li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Main -->
        <main class="flex-1 md:ml-0 min-h-screen">
            <div class="p-6 bg-gray-50 min-h-screen">
                <div class="p-6">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <!-- Overlay -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-10 md:hidden hidden"></div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="container mx-auto px-6 py-4 flex justify-between">
            <div class="text-sm text-gray-600">&copy; 2025 Enterprise ERP System.</div>
        </div>
    </footer>

    <script>
        // SETTINGS dropdown
        const settingsToggle = document.getElementById('settingsToggle');
        const settingsDropdown = document.getElementById('settingsDropdown');
        const settingsChevron = document.getElementById('settingsChevron');

        settingsToggle.addEventListener('click', function () {
            settingsDropdown.classList.toggle('hidden');
            settingsChevron.style.transform = settingsDropdown.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        });

        // ADMIN nested dropdown
        const adminToggle = document.getElementById('adminToggle');
        const adminDropdown = document.getElementById('adminDropdown');
        const adminChevron = document.getElementById('adminChevron');

        adminToggle.addEventListener('click', function () {
            adminDropdown.classList.toggle('hidden');
            adminChevron.style.transform = adminDropdown.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        });
        //ChatOfItem nested dropdown

        const itemToggle = document.getElementById('itemToggle');
        const itemDropdown = document.getElementById('itemDropdown');
        const itemChevron = document.getElementById('itemChevron');

        itemToggle.addEventListener('click', function () {
            itemDropdown.classList.toggle('hidden');
            itemChevron.style.transform = itemDropdown.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        });

        // SIDEBAR toggle
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        function toggleSidebar() {
            sidebar.classList.toggle('sidebar-closed');
            sidebarOverlay.classList.toggle('hidden');
        }
        sidebarToggle.addEventListener('click', toggleSidebar);
        sidebarOverlay.addEventListener('click', toggleSidebar);
    </script>
</body>
</html>
