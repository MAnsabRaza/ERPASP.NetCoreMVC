@model ERP.Models.Vender  // Your model type (optional if no model needed)

<div id="venderModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-4xl max-h-screen overflow-y-auto">
        @using (Html.BeginForm("Create", "Vender", FormMethod.Post, new { id = "venderForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.companyId)

            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-50 to-blue-100 p-5 rounded-t-2xl flex justify-between items-center">
                <h3 class="text-2xl font-bold text-blue-900 flex items-center gap-2">
                    <i class="fa-solid fa-user-plus"></i> Add New Vender
                </h3>
                <button type="button" onclick="closeVenderModal()" class="text-gray-600 hover:text-gray-900">
                    <i class="fa-solid fa-xmark text-xl"></i>
                </button>
            </div>

            <!-- Body -->
            <div class="p-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                    <div>
                        <label class="block font-semibold text-gray-700 mb-1">Current Date</label>
                        @Html.TextBoxFor(m => m.current_date, "{0:yyyy-MM-dd}", new
                        {
                            @class = "w-full mt-1 p-2 border border-gray-300 rounded",
                                        @id = "current_date",
                                        required = "required",
                                        type = "date"
                                        })
                </div>
                <div>
                    <label class="block font-semibold text-gray-700 mb-1">Vender Name <sup class="text-red-800">*</sup></label>
                    @Html.TextBoxFor(m => m.name,
                                        new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", required = "required", placeholder = "Enter name" })
                </div>
                <div class="flex items-center space-x-2 mt-6">
                    @Html.CheckBoxFor(m => m.status, new { @class = "w-5 h-5 text-blue-900 rounded" })
                    <span class="text-gray-600">Active</span>
                </div>
            </div>

            <!-- Add more fields as needed -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                <div>
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", type = "email" })
                </div>
                <div>
                    <label>Phone</label>
                    @Html.TextBoxFor(m => m.phone, new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", type = "tel" })
                </div>
                <div>
                    <label>Current Balance</label>
                    @Html.TextBoxFor(m => m.current_balance, new { @class = "w-full p-2.5 border border-gray-300 rounded-lg", type = "number", step = "0.01", value = "0" })
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="bg-gray-50 p-5 rounded-b-2xl flex justify-end space-x-3">
            <button type="button" onclick="closeVenderModal()"
                    class="px-6 py-2.5 rounded-xl text-sm font-semibold text-gray-700 bg-gray-300 hover:bg-gray-400">
                Close
            </button>
            <button type="submit"
                    class="px-6 py-2.5 rounded-xl text-sm font-semibold text-white bg-green-600 hover:bg-green-700">
                Save
            </button>
        </div>
                }
    </div>
</div>